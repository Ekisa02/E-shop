<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.Custom.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Round-cornered gradient background -->
        <item name="android:background">@drawable/bottom_nav_background</item>

        <!-- Icon & text tint (active/inactive) -->
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>



        <!-- Ripple on tap -->
        <item name="itemRippleColor">?attr/colorOnPrimary</item>

        <!-- Label text styles -->
        <item name="itemTextAppearanceActive">@style/BottomNav.ActiveLabel</item>
        <item name="itemTextAppearanceInactive">@style/BottomNav.InactiveLabel</item>

        <!-- Make icons a bit bigger -->
        <item name="itemIconSize">28dp</item>

        <!-- Elevation so it casts a soft shadow -->
        <item name="android:elevation">4dp</item>
    </style>
    <!-- Active label: bold, slightly larger -->
    <style name="BottomNav.ActiveLabel" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Inactive label: regular weight -->
    <style name="BottomNav.InactiveLabel" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--admin page styles -->
    <style name="ModernButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ModernTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="ModernDropdownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>
    <style name="ColorfulDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    //payment styles
    <style name="PaymentDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>
    <style name="ShapeAppearanceOverlay.Rounded10" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/TextInputThemeOverlay</item>
    </style>

    <style name="TextInputThemeOverlay">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnSurface">@color/textPrimary</item>
        <item name="colorError">@color/accent</item>
    </style>

</resources>