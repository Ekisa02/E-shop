<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background with subtle gradient -->
    <gradient
        android:angle="135"
        android:startColor="#FFFFFFFF"
        android:endColor="#FFF5F5F5"
        android:type="linear" />

    <!-- Rounded corners -->
    <corners
        android:radius="16dp" />

    <!-- Thin border -->
    <stroke
        android:width="1dp"
        android:color="#22000000" />

    <!-- Soft shadow (for API 21+) -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>